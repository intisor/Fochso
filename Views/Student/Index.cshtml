@model List<Fochso.Models.Student.StudentViewModel>
@{
    ViewData["Title"] = "Student List";
    int count = 1;
}

<div>
    <a asp-controller="Student" asp-action="Create">Add New Student</a>
</div>

@if (Model is not null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">S/N</th>
                <th scope="col">Name
                <th>
                <th scope="col">Class</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@count</td>
                    <td scope="row">@item.Name</td>
                    <td scope="row">@item.Class</td>
                    <td scope="row">
                        <div>
                            <a asp-controller="Student" asp-action="Details">Student Details</a>
                        </div>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
}