@model Fochso.Models.Teacher.TeacherViewModel

@{
    ViewData["Title"] = "Teacher Detail";
}

<div class="body">

    @if (Model is not null)
    {
        <div class="card">

            <div class="card-header">
                <dl class="row">
                    <dt class="col-sm-4">
                        Teacher Id:
                    </dt>

                    <dd class="col-sm-8">
                        @Model.Id
                    </dd>

                    <dt class="col-sm-4">
                        Teacher Name:
                    </dt>

                    <dd class="col-sm-8">
                        @Model.Name
                    </dd>

                    <dt class="col-sm-4">
                        Teaches:
                    </dt>

                    <dd class="col-sm-8">
                        @Model.TeachingSubject
                    </dd>
                </dl>

                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Teacher" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Update</a>
                    <a asp-controller="Teacher" asp-action="Index" class="btn btn-secondary">Back to list</a>

                    <form asp-controller="Teacher" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline-block">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                }
                <a asp-controller="Teacher" asp-action="Index" class="btn btn-secondary">Back to list</a>

            </div>
        </div>
    }
</div>