@model Fochso.Models.Teacher.UpdateTeacherViewModel
@{
	ViewData["Title"] = "Edit Teacher";
}

<div class="body">

	<div class="row">
		<div class="col-md-6">
			<form asp-action="Update">

				<div class="col-md-12 mb-3">
					<label class="control-label mb-1">Teacher Name:</label>
					<textarea asp-for="Name" type="text" class="form-control"></textarea>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>	
				<div class="col-md-12 mb-3">
					<label class="control-label mb-1">Teaches:</label>
					<textarea asp-for="TeachingSubject" type="text" class="form-control"></textarea>
					<span asp-validation-for="TeachingSubject" class="text-danger"></span>
				</div>

				<div class="col-md-12">
					<button type="submit" class="btn btn-primary">Update</button>
				</div>

			</form>
		</div>
	</div>
</div>

